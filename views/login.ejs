

    <style>
        body{
            overflow-x: hidden;
        }
    </style>
    
    <div class="container">
        <div class="navbar mt-4 navbar-dark bg-light justify-content-center border border-success" id="textarea">

            <h4 class="card-title font-weight-bold ">
                <h2 class="text-success ">Login </h2>
            </h4>
        </div>
    </div>
    <div class="contain mb-2">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body text-center">
                <h class="mb-3">
                    <img src="/assets/download.png" alt="icon" width="20%" />
                </h>
                <%- include ("./messages") %>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                    </div>
                    <p class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Enter Password" />
                            <i class="bi bi-eye-slash" id="togglePassword"></i>
                    </p>
                    <button type="submit" class="btn btn-success btn-block ">Login</button>
                </form>
                <p class="mt-4">
                    New User? <a href="/register">Register</a>
                </p>
                <p>
                    Forgot Password? <a href="/forgot">Reset</a>
                </p>
            </div>
        </div>
    </div>
    </div>
    <script>
        const togglePassword = document
            .querySelector('#togglePassword');
  
        const password = document.querySelector('#password');
  
        togglePassword.addEventListener('click', () => {
  
            // Toggle the type attribute using
            // getAttribure() method
            const type = password
                .getAttribute('type') === 'password' ?
                'text' : 'password';
                  
            password.setAttribute('type', type);
  
            // Toggle the eye and bi-eye icon
            this.classList.toggle('bi-eye');
        });
    </script>
   
    
  
    
